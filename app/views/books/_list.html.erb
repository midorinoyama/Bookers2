<h2>User info</h2>
<table class="table">
  <tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></tr>
  <tr>
     <th>name</th>
     <th><%= user.name %></th>
  </tr>
  <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to followings_user_path(user.id) do %>
          <%= user.followings.count %>
        <% end %>
    </th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to followers_user_path(user.id) do %>
          <%= user.followers.count %>
        <% end %>
    </th>
  </tr>
</table>
<div class="row">
 <% if current_user != user %>
   <% if user.followed_by?(current_user) %>
      <%= link_to user_relationships_path(user.id), method: :delete do %>
        <button class="btn btn-primary">フォロー外す</button>
      <% end %>
    <% else %>
      <%= link_to user_relationships_path(user.id), method: :post do %>
        <button class="btn btn-success">フォローする</button>
      <% end %>
   <% end %>
 <% end %>
</div>
<div class="row">
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <span class="fas fa-user-cog"></span>
      <% end %>
</div>
<h2 class="mt-3">New book</h2>
<%= form_with model:book, url:'/books', local:true do |f| %>
  <div class="form-group">
    <label for ="book_title">Title</label><br />
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <label for ="book_opinion">Opinion</label><br />
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Book", class: "btn btn-success btn-sm" %>
  </div>
<% end %>
